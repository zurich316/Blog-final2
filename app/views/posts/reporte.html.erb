<h1>Reporte</h1>
<table border=1>
  <thead>
    <tr>
      <th>id</th>
      <th>Titulo</th>
      <th>Creation Date</th>
      <th>Update date</th>
      <th>Cantidad Comentarios</th>
      <th>Cantidad likes</th>
      <th >Cantidad palabras</th>
      <th >Categoria</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      	<td><%= post.id %></td>
        <td><%= post.contenido %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= post.comentarios.count %></td>
        <td><%= post.likes %></td>
        <td><%= post.contenido.split.size %></td>
        <td><%= post.categoria %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
